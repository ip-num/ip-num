{
  "include": [
    "packages/ip-num/src/*",
    "packages/ip-num/spec/*"
  ],
  "compileOnSave": true,
    "compilerOptions": {
      "skipLibCheck": true,
      "strict": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "declaration": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals":false,
      "noUnusedParameters": false,
      "outDir": "dist",
      "pretty": true,
      "sourceMap": true,
      "typeRoots": [ "./node_modules/@types" ],
      "lib": ["es2019","esnext"],
      "target": "es5",
      "downlevelIteration": true
    }
}
